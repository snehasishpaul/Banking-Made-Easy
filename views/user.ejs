<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>

    <style>
        body {
            background: url("../img/bg.jpg") no-repeat center center/cover;
        }
    </style>
    <body>
        <%- include("./partials/navbar") %>

        <div
            class="
                container
                d-flex
                justify-content-center
                align-items-center
                flex-column
            "
        >
            <%- include("./partials/flash") %>
            <h1 class="text-center">Banking Made Easy</h1>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title"><b>User-Info:</b></h2>
                    <form class="form-group">
                        <div class="card-item">
                            <label class="form-label" for="name">Name:</label>
                            <br />
                            <input
                                class="form-control"
                                type="text"
                                name="name"
                                id="name"
                                value="<%= users.name %> "
                                readonly
                            />
                        </div>
                        <div class="card-item">
                            <label class="form-label" for="email">Email:</label>
                            <br />
                            <input
                                class="form-control"
                                type="email"
                                name="email"
                                id="email"
                                value="<%= users.email %>"
                                readonly
                            />
                        </div>
                        <div class="card-item">
                            <label class="form-label" for="balance"
                                >Current Balance:</label
                            >
                            <br />
                            <input
                                class="form-control"
                                type="number"
                                name="balance"
                                id="balance"
                                value="<%= users.balance %>"
                                readonly
                            />
                        </div>
                    </form>

                    <h2 class="card-title mt-3"><b>Transfer To:</b></h2>
                    <form
                        action="/banking/<%= users._id %>?_method=PATCH"
                        class="form-group needs-validation"
                        method="POST"
                        novalidate
                    >
                        <div class="card-item">
                            <label class="form-label" for="id"
                                >Account ID:</label
                            >
                            <br />
                            <input
                                class="form-control"
                                type="text"
                                name="transferID"
                                id="id"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="card-item">
                            <label class="form-label" for="balance"
                                >Transfer Amount:</label
                            >
                            <br />
                            <input
                                class="form-control"
                                type="number"
                                name="transferBalance"
                                id="balance"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="card-item my-3">
                            <button class="btn btn-success">Transfer</button>
                        </div>
                    </form>

                    <a
                        href="/banking/show"
                        class="btn btn-primary btn-sm mt-3 mx-auto d-block"
                        >Back</a
                    >
                </div>
            </div>
        </div>

        <script src="/js/validation.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
