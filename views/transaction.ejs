<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
    <style>
        body {
            background: url("../img/bgTransaction.jpg") no-repeat center
                center/cover;
        }
    </style>
    <body>
        <%- include("./partials/navbar") %>

        <div
            class="
                container
                d-flex
                justify-content-center
                align-items-center
                flex-column
            "
        >
            <h1 class="text-center mt-5">Banking Made Easy</h1>
            <h2 class="mb-3">All Transactions</h2>
            <div class="table-content">
                <table class="table table-lg table-dark table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Transaction ID</th>
                            <th scope="col">From</th>
                            <th scope="col">To</th>
                            <th scope="col">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let trans of transactions) { %>
                        <tr>
                            <th scope="row"><%= trans._id %></th>
                            <td><%= trans.userID %></td>
                            <td><%= trans.transferID %></td>
                            <td><%= trans.balance %></td>
                            <!-- <td>
                                <a
                                    class="btn btn-primary btn-sm"
                                    href="/banking/<%= trans._id %> "
                                    >Make Transaction</a
                                >
                            </td> -->
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
